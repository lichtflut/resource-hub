<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-3.0.xsd 
	http://www.springframework.org/schema/context
	http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<bean id="rbConfig" class="de.lichtflut.rb.core.RBConfig">
		<constructor-arg value="test"></constructor-arg>
	</bean>

	<bean id="serviceProviderFactory"
		class="de.lichtflut.rb.core.services.impl.DefaultServiceProviderFactory">
		<constructor-arg ref="rbConfig" />
	</bean>

	<bean id="provider" class="de.lichtflut.rb.rest.api.TestServiceProvider">
		<constructor-arg ref="rbConfig" />
	</bean>

	<bean id="authorizationHandler" class="de.lichtflut.rb.rest.api.security.DefaultAuthorizationHandler" />

	<bean id="authService" class="de.lichtflut.rb.core.security.AuthenticationService"
		factory-bean="serviceProviderFactory" factory-method="createAuthenticationService">
	</bean>

    <context:annotation-config/>
    
	<context:component-scan base-package="de.lichtflut.rb.rest.api" />
    
	<!-- Added to get 'autowiring' support -->
	<bean class="org.springframework.beans.factory.annotation.AutowiredAnnotationBeanPostProcessor" />
</beans>