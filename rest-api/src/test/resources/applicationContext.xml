<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-3.0.xsd 
	http://www.springframework.org/schema/context
	http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<bean id="rbConfig" class="de.lichtflut.rb.core.RBConfig">
		<constructor-arg value="test"></constructor-arg>
	</bean>

	<bean id="authorizationHandler" class="de.lichtflut.rb.rest.api.security.DefaultAuthorizationHandler" />

    <bean id="domainInitializer" class="de.lichtflut.rb.rest.api.TestDomainInitializer"/>

    <bean id="securityConfiguration" class="de.lichtflut.rb.rest.api.TestSecurityConfig"/>

	<bean id="container" class="de.lichtflut.rb.rest.api.TestServiceProvider">
		<constructor-arg index="0" ref="rbConfig" />
		<constructor-arg index="1" ref="authModule" />
        <constructor-arg index="2" ref="domainInitializer" />
	</bean>

    <bean id="gateFactory" class="de.lichtflut.rb.core.services.MasterGateFactory">
		<constructor-arg ref="rbConfig"></constructor-arg>
	</bean>
	
	<bean id="providerFactory" class="de.lichtflut.rb.rest.delegate.providers.RBServiceProviderFactory">
	</bean>

	<bean id="masterGate" class="org.arastreju.sge.ArastrejuGate"
		factory-bean="gateFactory" factory-method="createMasterGate">
	</bean>

	<bean id="authModule"
		class="de.lichtflut.rb.core.security.authserver.EmbeddedAuthModule">
		<constructor-arg index="0" ref="masterGate"></constructor-arg>
	</bean>

	<context:annotation-config />

	<context:component-scan base-package="de.lichtflut.rb.rest.api" />

	<!-- Added to get 'autowiring' support -->
	<bean
		class="org.springframework.beans.factory.annotation.AutowiredAnnotationBeanPostProcessor" />
</beans>