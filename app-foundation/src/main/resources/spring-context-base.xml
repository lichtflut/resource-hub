<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <!-- CONFIG and SERVICE CONTEXT -->

    <bean id="masterGateFactory" class="de.lichtflut.rb.core.services.MasterGateFactory">
        <constructor-arg ref="rbConfig"></constructor-arg>
    </bean>

    <!-- ARASTREJU -->

    <bean id="masterGate" class="org.arastreju.sge.ArastrejuGate" 
            factory-bean="masterGateFactory" factory-method="createMasterGate">
    </bean>

</beans>