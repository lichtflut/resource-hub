perspective "Organization" {

	title : "Organizational overview"

	port {

		widget {
			implementing-class : "a.test.Class"
		}

		widget {
			title : "All organizations"
			display : "list"
			action {
			    label : "Add a new organization"
			    create : "http://rb.lichtflut.de/common#Organization"
			}
			selection {
				by-type : "http://rb.lichtflut.de/common#Organization"
			}
			column {
                label : "Name"
                property : "common:hasName"
            }
            column {
                label : "General Manager"
                property : "http://rb.lichtflut.de/common#hasGeneralManager"
            }
		}

	}

	port {

		widget {
			title : "All processes"
			display : "list"
			selection {
				by-type : "http://rb.lichtflut.de/bpm#BusinessProcess"
			}
		}

		widget {
			title : "My current project"
			display : "details"
			selection {
				<script>
				    finish(query("x='something'").filter(function (e) { e < 1 }));
				</script>
			}
		}

	}

}