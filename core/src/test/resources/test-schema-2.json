      "datatype" : "resource",
      "resource-constraint" : "common:Address"
    },
    "property-declaration" : {
      "property-type" : "common:hasDateOfBirth",
      "min" : 1,
      "field-label" : {
        "default" : "Birthdate"
      },
      "max" : 1,
      "datatype" : "date"
    },
    "property-declaration" : {
      "property-type" : "common:hasPlaceOfBirth",
      "min" : 0,
      "field-label" : {
        "default" : "Birthplace"
      },
      "max" : 1,
      "datatype" : "resource",
      "resource-constraint" : "common:City"
    },
    "property-declaration" : {
      "property-type" : "common:hasEmail",
      "min" : 0,
      "field-label" : {
